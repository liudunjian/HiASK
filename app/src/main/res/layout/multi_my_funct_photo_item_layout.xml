<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/multi_my_func_item_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_photo_background">

    <ImageView
        android:id="@+id/multi_my_header_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:scaleType="fitXY"
        android:src="@drawable/my_user_photo_default" />

    <TextView
        android:id="@+id/multi_my_user_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/multi_my_header_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40px"
        android:layout_marginTop="40px"
        android:text="@string/my_fragment_user_default_name"
        android:textColor="#333333"
        android:textSize="46px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#d0d0d9" />
</RelativeLayout>


