<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/splash_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:text="545677"
        android:textColor="@android:color/black"
        android:textSize="24px" />

    <TextView
        android:id="@+id/splash_build"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_version"
        android:layout_marginLeft="30px"
        android:text="123213"
        android:textColor="@android:color/black"
        android:textSize="24px" />

    <TextView
        android:id="@+id/splash_descriptor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="245px"
        android:text="@string/splash_descriptor"
        android:textColor="#8d8b8c"
        android:textSize="46px" />

    <TextView
        android:id="@+id/splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/splash_descriptor"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20px"
        android:text="@string/splash_title"
        android:textColor="#514f4f"
        android:textSize="54px" />


</RelativeLayout>