<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/guide_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24px"
        android:layout_marginTop="36px"
        android:background="@drawable/shape_guide_skip"
        android:padding="30px"
        android:text="@string/guide_skip"
        android:textColor="#ffffff"
        android:textSize="36px"
        android:visibility="visible" />

    <TextView
        android:id="@+id/guide_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104px"
        android:background="@drawable/shape_guide_enter"
        android:paddingBottom="40px"
        android:paddingLeft="80px"
        android:paddingRight="80px"
        android:paddingTop="40px"
        android:text="@string/guide_enter"
        android:textColor="#469fef"
        android:textSize="46px"
        android:visibility="gone" />

    <com.hisense.hiask.widget.indicator.LinePageIndicator
        android:id="@+id/guide_line_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40px"
        app:line_page_indicator_gap_width="20px"
        app:line_page_indicator_selected_color="@color/Blue"
        app:line_page_indicator_stroke_width="4px"
        app:line_page_indicator_unselected_color="@android:color/darker_gray"
        app:line_page_indicator_width="20px" />

</RelativeLayout>