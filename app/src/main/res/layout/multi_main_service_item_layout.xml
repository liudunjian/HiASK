<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main_srv_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ripple_item_clicked_with_mask"
        android:orientation="vertical"
        android:padding="35px">

        <ImageView
            android:id="@+id/main_srv_item_img"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10px"
            android:src="@drawable/assistant_short_menu_life_food" />

        <TextView
            android:id="@+id/main_srv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="文章" />
    </LinearLayout>

</RelativeLayout>