<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="54px">

    <ImageView
        android:id="@+id/robot_msg_menu_header_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24px"
        android:src="@drawable/robot_portrait_robot" />

    <FrameLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/robot_message_bubble_left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_robot_message_menu_header"
                android:paddingBottom="16px"
                android:paddingLeft="56px"
                android:paddingRight="56px"
                android:paddingTop="16px"
                android:text="@string/robot_message_menu_welcome" />

            <com.hisense.himultitype.view.LinearMultiView
                android:id="@+id/robot_msg_menu_mnu_multiview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:linear_orientation="1"/>

        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/robot_message_menu_header_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:src="@drawable/robot_portrait_user"
        android:visibility="invisible" />
</LinearLayout>