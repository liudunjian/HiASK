<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="745px"
        android:layout_margin="20px">

        <android.support.v4.view.ViewPager
            android:id="@+id/robot_plugin_menu_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.hisense.hiask.widget.indicator.LinePageIndicator
            android:id="@+id/robot_plugin_menu_line_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:line_page_indicator_gap_width="20px"
            app:line_page_indicator_selected_color="@color/Blue"
            app:line_page_indicator_stroke_width="4px"
            app:line_page_indicator_unselected_color="@android:color/darker_gray"
            app:line_page_indicator_width="20px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"/>

    </RelativeLayout>
</FrameLayout>

