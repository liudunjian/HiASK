<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_guide_page_1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="248px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pager_guide_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/guide_pager1_title"
            android:textColor="#514f4f"
            android:textSize="60px" />

        <TextView
            android:id="@+id/pager_guide_second_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:text="@string/guide_pager1_descriptor"
            android:textColor="#8d8b8c"
            android:textSize="48px" />
    </LinearLayout>

</RelativeLayout>